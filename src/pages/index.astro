---
import Layout from "../layouts/Layout.astro";
---

<script>
  // fiori
  import "@ui5/webcomponents-fiori/dist/Bar.js";
  import "@ui5/webcomponents-fiori/dist/Page.js";
  // components
  import "@ui5/webcomponents/dist/Button.js";
  import "@ui5/webcomponents/dist/Label.js";
  import "@ui5/webcomponents/dist/Title.js";
  import "@ui5/webcomponents/dist/Carousel.js";
  import "@ui5/webcomponents/dist/Card.js";
  import "@ui5/webcomponents/dist/CardHeader.js";
  // icon
  import "@ui5/webcomponents-icons/dist/email.js";
  import "@ui5/webcomponents-icons/dist/sap-logo-shape.js";
</script>

<style>
  .imgCarousel {
    max-height: 30rem;
    /* zoom full content the image */
    width: 100%;
    object-fit: cover;
  }
</style>
<Layout title="Welcome to Astro.">
  <ui5-page background-design="Solid" floating-footer>
    <ui5-bar design="Header" slot="header" style="">
      <img
        slot="startContent"
        src="./sap-logo.png"
        alt="SAP"
        style="height: 2rem; margin-right: 1rem;"
      />
      <ui5-title type="H1">ZSAP-ROMA</ui5-title>
      <ui5-button
        design="Emphasized"
        icon="email"
        tooltip="Contact us"
        slot="endContent"></ui5-button>
    </ui5-bar>

