---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="ZSAP ROMA, Community SAP Roma" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <script>
      // theme
      import applyTheme from "@ui5/webcomponents-base/dist/theming/applyTheme.js";
      // possible value: https://sap.github.io/ui5-webcomponents/docs/advanced/configuration/#theme
      applyTheme("sap_horizon_dark");

      // fiori
      import "@ui5/webcomponents-fiori/dist/Page.js";
      import "@ui5/webcomponents-fiori/dist/Bar.js";
      // components - common
      import "@ui5/webcomponents/dist/Button.js";
      import "@ui5/webcomponents/dist/Label.js";
      import "@ui5/webcomponents/dist/Title.js";
      import "@ui5/webcomponents/dist/Link.js";
      // icon
      import "@ui5/webcomponents-icons/dist/email.js";

      // theme
      import "@ui5/webcomponents-theming/Assets.js";
    </script>
  </head>
  <body>
    <ui5-page background-design="Solid" floating-footer>
      <!-- HEADER -->
      <ui5-bar design="Header" slot="header" style="">
        <img
          slot="startContent"
          src="./sap-logo.png"
          alt="SAP"
          style="height: 2rem; margin-right: 1rem;"
        />
        <ui5-title type="H1">ZSAP-ROMA</ui5-title>
        <ui5-button
          icon="email"
          tooltip="Contact us"
          slot="endContent"></ui5-button>
      </ui5-bar>
      <slot />
      <!-- FOOTER -->
      <div slot="footer">
        <ui5-bar design="FloatingFooter">
          <ui5-button design="Positive" slot="startContent">
            Blog
          </ui5-button>
          <ui5-button design="Emphasized" slot="endContent">
            Unisciti alla community
          </ui5-button>
        </ui5-bar>
      </div>
    </ui5-page>
  </body>
</html>
<style is:global>
  :root {
    height: 100vh;
  }
  *:not(:defined) {
    display: none;
  }
  html {
    height: 100vh;
  }
  body {
    height: 100%;
    margin: 0;
  }
</style>
